@model CaManager.Models.ImportRootCaModel

@{
    ViewData["Title"] = "Import Root CA";
}

<h2>Import Root CA PFX</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Import" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Certificate Name (in Key Vault)</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="CertificateFile" class="form-label">PFX File</label>
                <input asp-for="CertificateFile" type="file" class="form-control" accept=".pfx" />
                <span asp-validation-for="CertificateFile" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">PFX Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Import</button>
            <a asp-action="Index" class="btn btn-link">Cancel</a>
        </form>
    </div>
</div>
