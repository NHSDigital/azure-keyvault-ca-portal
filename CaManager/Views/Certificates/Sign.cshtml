@{
    ViewData["Title"] = "Sign CSR - Step 1";
    var issuerName = ViewBag.IssuerName as string;
}

<h2>Sign CSR with @issuerName</h2>
<p>Step 1: Upload the Certificate Signing Request (CSR).</p>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Inspect" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="issuerName" value="@issuerName" />

            <div class="mb-3">
                <label class="form-label">CSR File (.csr, .pem)</label>
                <input type="file" name="csrFile" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-primary">Inspect CSR</button>
            <a asp-action="Index" class="btn btn-link">Cancel</a>
        </form>
    </div>
</div>
