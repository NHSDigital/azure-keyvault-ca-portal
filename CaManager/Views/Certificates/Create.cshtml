@model CaManager.Models.CreateRootCaModel

@{
    ViewData["Title"] = "Create Root CA";
}

<h2>Create New Root CA in Key Vault</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="SubjectName" class="form-label"></label>
                <input asp-for="SubjectName" class="form-control" />
                <span asp-validation-for="SubjectName" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="ValidityMonths" class="form-label"></label>
                <input asp-for="ValidityMonths" class="form-control" />
                <span asp-validation-for="ValidityMonths" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="KeySize" class="form-label"></label>
                <select asp-for="KeySize" class="form-select">
                    <option value="2048">RSA 2048</option>
                    <option value="4096">RSA 4096</option>
                </select>
                <span asp-validation-for="KeySize" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Create Certificate</button>
            <a asp-action="Index" class="btn btn-link">Cancel</a>
        </form>
    </div>
</div>
